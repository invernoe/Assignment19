@model Department
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create New Department</h1>
<br />
<br />
<form action="Create">
    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" type="text" asp-for="Code"/>
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" type="text" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="CreatedDate"></label>
        <input class="form-control" asp-for="CreatedDate" />
    </div>
    <input type="submit" value="Create" class="btn btn-primary mt-5" />
    <a asp-action="Index" class="btn btn-light mt-5">Back to list</a>
</form>

