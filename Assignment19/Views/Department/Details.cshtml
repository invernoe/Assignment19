@model Department
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Department Details</h1>
<br />
<br />
<div>
    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" type="text" asp-for="Code" readonly />
    </div>
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" type="text" asp-for="Name" readonly />
    </div>
    <div>
        <label class="col-form-label" asp-for="CreatedDate"></label>
        <input class="form-control" asp-for="CreatedDate" readonly />
    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-5">Edit</a>
    <a asp-action="Index" class="btn btn-light mt-5">Back to list</a>
</div>